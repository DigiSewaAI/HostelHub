# ===========================================
# üè† HostelHub - Environment Configuration
# ===========================================
# Copy this file to .env and update values as needed
# ===========================================

# =======================
# üéØ Application Settings
# =======================
APP_NAME=HostelHub
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# =======================
# üåê Localization
# =======================
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# =======================
# ‚öôÔ∏è Maintenance
# =======================
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# =======================
# üîß Server Configuration
# =======================
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# =======================
# üìù Logging Configuration
# =======================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =======================
# üóÑÔ∏è Database Configuration
# =======================

# MySQL Configuration (Default)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=hostelhub
DB_USERNAME=root
DB_PASSWORD=

# SQLite Configuration (Alternative - Uncomment to use)
# DB_CONNECTION=sqlite
# DB_DATABASE=/absolute/path/to/database.sqlite

# PostgreSQL Configuration (Alternative - Uncomment to use)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=hostelhub
# DB_USERNAME=postgres
# DB_PASSWORD=

# =======================
# üîê Session Configuration
# =======================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# =======================
# üíæ Cache & Queue
# =======================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_DRIVER=file
CACHE_STORE=file
# CACHE_PREFIX=

# =======================
# üöÄ Performance
# =======================
MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =======================
# üìß Mail Configuration
# =======================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# =======================
# ‚òÅÔ∏è AWS Configuration
